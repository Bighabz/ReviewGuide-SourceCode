---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
---

<Layout title="Electronics - ReviewGuide.ai">
    <div class="space-y-8">
        <div class="text-center py-12">
            <h1 class="text-4xl font-bold text-slate-900 mb-4">Electronics</h1>
            <p class="text-lg text-slate-600 max-w-2xl mx-auto">
                Expert reviews on headphones, laptops, smart devices, and more.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <ProductCard
                title="Sony WH-1000XM5 Wireless Headphones"
                price="$348.00"
                image="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400"
                asin="PLACEHOLDER001"
                rating={4.6}
                description="Industry-leading noise cancellation with exceptional sound quality."
            />
            <ProductCard
                title="Apple AirPods Max"
                price="$479.00"
                image="https://images.unsplash.com/photo-1546435770-a3e426bf472b?w=400"
                asin="PLACEHOLDER007"
                rating={4.6}
                description="Premium over-ear headphones with spatial audio and transparency mode."
            />
            <ProductCard
                title="Kindle Paperwhite (16 GB)"
                price="$149.99"
                image="https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=400"
                asin="PLACEHOLDER006"
                rating={4.6}
                description="6.8 inch display with adjustable warm light. Purpose-built for reading."
            />
        </div>

        <div class="text-center pt-8">
            <a href="/blog/best-wireless-headphones-2025" class="text-blue-600 hover:text-blue-700 font-semibold">
                Read our full headphones guide â†’
            </a>
        </div>
    </div>
</Layout>
