---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
---

<Layout title="ReviewGuide.ai - Best Product Reviews & Recommendations">
	<div class="space-y-16">
        <!-- Hero Section -->
        <section class="text-center py-20 px-4 bg-gradient-to-br from-slate-900 via-slate-800 to-blue-900 rounded-3xl text-white relative overflow-hidden shadow-2xl">
            <div class="relative z-10 max-w-3xl mx-auto">
                <span class="inline-block py-1 px-3 rounded-full bg-blue-500/20 border border-blue-400/30 text-blue-300 text-sm font-semibold mb-6 backdrop-blur-sm">
                    AI-Powered Shopping Assistant
                </span>
                <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">
                    Smart Shopping, <br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-emerald-400">Simplified by AI</span>
                </h1>
                <p class="text-lg md:text-xl text-slate-300 mb-8 leading-relaxed max-w-2xl mx-auto">
                    We analyze thousands of reviews to bring you data-driven recommendations. Stop guessing and start buying with confidence.
                </p>
                <div class="flex flex-wrap justify-center gap-4">
                    <a href="#featured" class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3.5 px-8 rounded-full transition-all transform hover:scale-105 shadow-lg shadow-blue-900/50">
                        Explore Reviews
                    </a>
                </div>
            </div>
            
            <!-- Abstract Background Shapes -->
            <div class="absolute top-0 left-0 w-full h-full overflow-hidden opacity-30 pointer-events-none">
                <div class="absolute -top-24 -left-24 w-96 h-96 bg-blue-500 rounded-full blur-3xl mix-blend-multiply animate-pulse"></div>
                <div class="absolute bottom-0 right-0 w-80 h-80 bg-emerald-500 rounded-full blur-3xl mix-blend-multiply"></div>
            </div>
        </section>

        <!-- Categories Section -->
        <section id="categories">
            <h2 class="text-3xl font-bold mb-8 text-slate-900 flex items-center gap-3">
                <span class="w-1.5 h-8 bg-blue-600 rounded-full"></span>
                Popular Categories
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {['Electronics', 'Home & Kitchen', 'Travel', 'Health'].map((category) => (
                    <a href={`/categories/${category.toLowerCase().replace(' & ', '-').replace(' ', '-')}`} class="group block p-6 bg-white rounded-xl shadow-sm hover:shadow-md border border-slate-100 transition-all text-center">
                        <div class="w-12 h-12 bg-blue-50 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform">
                           <span class="font-bold text-xl">{category[0]}</span>
                        </div>
                        <h3 class="font-bold text-slate-900 group-hover:text-blue-600">{category}</h3>
                    </a>
                ))}
            </div>
        </section>

        <!-- Featured Products -->
        <section id="featured">
             <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-bold text-slate-900 flex items-center gap-3">
                    <span class="w-1.5 h-8 bg-amber-400 rounded-full"></span>
                    Featured Picks
                </h2>
                <!-- <a href="/blog" class="text-blue-600 font-semibold hover:text-blue-700 flex items-center">
                    View all reviews <span class="ml-1">â†’</span>
                </a> -->
            </div>
            
            <div class="grid md:grid-cols-3 gap-8">
                <ProductCard
                    title="Sony WH-1000XM5 Wireless Noise Canceling Headphones"
                    price="$348.00"
                    image="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=400"
                    asin="PLACEHOLDER001"
                    rating={4.6}
                    description="Industry-leading noise cancellation, exceptional sound quality, and crystal-clear hands-free calling."
                />
                <ProductCard
                    title="Ninja AF101 Air Fryer that Crisps, Roasts, Reheats"
                    price="$89.95"
                    image="https://images.unsplash.com/photo-1585515320310-259814833e62?w=400"
                    asin="PLACEHOLDER002"
                    rating={4.8}
                    description="The best air fryer for most people. Crisps evenly, easy to clean, and compact enough for small kitchens."
                />
                <ProductCard
                    title="Samsonite Omni PC Hardside Expandable Luggage"
                    price="$120.00"
                    image="https://images.unsplash.com/photo-1565026057447-bc90a3dceb87?w=400"
                    asin="PLACEHOLDER003"
                    rating={4.5}
                    description="Built to last with scratch-resistant micro-diamond texture and lightweight polycarbonate construction."
                />
                <ProductCard
                     title="Apple AirTag 4 Pack"
                     price="$79.00"
                     image="https://images.unsplash.com/photo-1586953208448-b95a79798f07?w=400"
                     asin="PLACEHOLDER004"
                     rating={4.7}
                     description="Keep track of and find your items alongside friends and devices in the Find My app."
                />
                <ProductCard
                     title="Instant Pot Duo 7-in-1 Electric Pressure Cooker"
                     price="$99.95"
                     image="https://images.unsplash.com/photo-1556909114-f6e7ad7d3136?w=400"
                     asin="PLACEHOLDER005"
                     rating={4.7}
                     description="Easy to use, easy to clean, fast, versatile, and convenient. Replaces 7 kitchen appliances."
                />
                <ProductCard
                     title="Kindle Paperwhite (16 GB)"
                     price="$149.99"
                     image="https://images.unsplash.com/photo-1507842217343-583bb7270b66?w=400"
                     asin="PLACEHOLDER006"
                     rating={4.6}
                     description="Now with a 6.8 inch display and adjustable warm light. Purpose-built for reading."
                />
            </div>
        </section>
    </div>
</Layout>
