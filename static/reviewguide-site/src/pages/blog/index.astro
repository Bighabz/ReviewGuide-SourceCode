---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="ReviewGuide.ai - Blog">
	<div class="max-w-4xl mx-auto py-12 px-4">
        <h1 class="text-4xl font-bold mb-8 text-center">Latest Reviews & Guides</h1>
        <div class="grid md:grid-cols-2 gap-8">
            {posts.map((post) => (
                <a href={`/blog/${post.slug}/`} class="group block bg-white rounded-xl shadow-sm border border-slate-100 overflow-hidden hover:shadow-md transition-all">
                    <div class="aspect-video bg-slate-100 relative overflow-hidden">
                        {post.data.heroImage && (
                            <img src={post.data.heroImage} alt="" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                        )}
                        <div class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-xs font-bold text-blue-600 uppercase">
                            {post.data.category}
                        </div>
                    </div>
                    <div class="p-6">
                        <h2 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">{post.data.title}</h2>
                        <p class="text-slate-600 text-sm line-clamp-2 mb-4">{post.data.description}</p>
                        <div class="text-slate-400 text-xs">
                            {post.data.pubDate.toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </div>
</Layout>
